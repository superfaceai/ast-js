{
    "$id": "ProviderJson",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "ApiKeyPlacement": {
            "$id": "ApiKeyPlacement",
            "description": "The placement of the API key.",
            "enum": [
                "body",
                "header",
                "path",
                "query"
            ],
            "type": "string"
        },
        "OAuthScheme": {
            "enum": [
                "authorizationCode",
                "clientCredentials",
                "implicit",
                "password"
            ],
            "type": "string"
        }
    },
    "description": "Type decribing provider.json document.",
    "properties": {
        "defaultService": {
            "type": "string"
        },
        "name": {
            "pattern": "^[a-z][_\\-a-z]*$",
            "type": "string"
        },
        "parameters": {
            "items": {
                "additionalProperties": false,
                "description": "Parameter needed for use of provider.",
                "properties": {
                    "default": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "name": {
                        "pattern": "^[_a-zA-Z][_a-zA-Z0-9]*$",
                        "type": "string"
                    }
                },
                "required": [
                    "name"
                ],
                "type": "object"
            },
            "type": "array"
        },
        "securitySchemes": {
            "items": {
                "anyOf": [
                    {
                        "additionalProperties": false,
                        "properties": {
                            "flows": {
                                "items": {
                                    "anyOf": [
                                        {
                                            "additionalProperties": false,
                                            "properties": {
                                                "authorizationUrl": {
                                                    "type": "string"
                                                },
                                                "clientAuthenticationMethod": {
                                                    "description": "Defines how SDK sends client credentials, default is 'client_secret_basic'",
                                                    "enum": [
                                                        "client_secret_basic",
                                                        "client_secret_post"
                                                    ],
                                                    "type": "string"
                                                },
                                                "refreshStatusCode": {
                                                    "description": "Defines which HTTP status code is marking expired access token, default is 401",
                                                    "type": "number"
                                                },
                                                "refreshUrl": {
                                                    "type": "string"
                                                },
                                                "scheme": {
                                                    "enum": [
                                                        "implicit"
                                                    ],
                                                    "type": "string"
                                                },
                                                "scopes": {
                                                    "items": {
                                                        "type": "string"
                                                    },
                                                    "type": "array"
                                                },
                                                "scopesSepartor": {
                                                    "description": "Secopes separator, default is whitespace",
                                                    "type": "string"
                                                }
                                            },
                                            "required": [
                                                "authorizationUrl",
                                                "scheme",
                                                "scopes"
                                            ],
                                            "type": "object"
                                        },
                                        {
                                            "additionalProperties": false,
                                            "properties": {
                                                "authorizationUrl": {
                                                    "type": "string"
                                                },
                                                "clientAuthenticationMethod": {
                                                    "description": "Defines how SDK sends client credentials, default is 'client_secret_basic'",
                                                    "enum": [
                                                        "client_secret_basic",
                                                        "client_secret_post"
                                                    ],
                                                    "type": "string"
                                                },
                                                "refreshStatusCode": {
                                                    "description": "Defines which HTTP status code is marking expired access token, default is 401",
                                                    "type": "number"
                                                },
                                                "refreshUrl": {
                                                    "type": "string"
                                                },
                                                "scheme": {
                                                    "enum": [
                                                        "authorizationCode"
                                                    ],
                                                    "type": "string"
                                                },
                                                "scopes": {
                                                    "items": {
                                                        "type": "string"
                                                    },
                                                    "type": "array"
                                                },
                                                "scopesSepartor": {
                                                    "description": "Secopes separator, default is whitespace",
                                                    "type": "string"
                                                },
                                                "tokenUrl": {
                                                    "type": "string"
                                                }
                                            },
                                            "required": [
                                                "authorizationUrl",
                                                "scheme",
                                                "scopes"
                                            ],
                                            "type": "object"
                                        },
                                        {
                                            "additionalProperties": false,
                                            "properties": {
                                                "clientAuthenticationMethod": {
                                                    "description": "Defines how SDK sends client credentials, default is 'client_secret_basic'",
                                                    "enum": [
                                                        "client_secret_basic",
                                                        "client_secret_post"
                                                    ],
                                                    "type": "string"
                                                },
                                                "refreshStatusCode": {
                                                    "description": "Defines which HTTP status code is marking expired access token, default is 401",
                                                    "type": "number"
                                                },
                                                "refreshUrl": {
                                                    "type": "string"
                                                },
                                                "scheme": {
                                                    "enum": [
                                                        "password"
                                                    ],
                                                    "type": "string"
                                                },
                                                "scopes": {
                                                    "items": {
                                                        "type": "string"
                                                    },
                                                    "type": "array"
                                                },
                                                "scopesSepartor": {
                                                    "description": "Secopes separator, default is whitespace",
                                                    "type": "string"
                                                },
                                                "tokenUrl": {
                                                    "type": "string"
                                                }
                                            },
                                            "required": [
                                                "scheme",
                                                "scopes"
                                            ],
                                            "type": "object"
                                        },
                                        {
                                            "additionalProperties": false,
                                            "properties": {
                                                "clientAuthenticationMethod": {
                                                    "description": "Defines how SDK sends client credentials, default is 'client_secret_basic'",
                                                    "enum": [
                                                        "client_secret_basic",
                                                        "client_secret_post"
                                                    ],
                                                    "type": "string"
                                                },
                                                "refreshStatusCode": {
                                                    "description": "Defines which HTTP status code is marking expired access token, default is 401",
                                                    "type": "number"
                                                },
                                                "refreshUrl": {
                                                    "type": "string"
                                                },
                                                "scheme": {
                                                    "enum": [
                                                        "clientCredentials"
                                                    ],
                                                    "type": "string"
                                                },
                                                "scopes": {
                                                    "items": {
                                                        "type": "string"
                                                    },
                                                    "type": "array"
                                                },
                                                "scopesSepartor": {
                                                    "description": "Secopes separator, default is whitespace",
                                                    "type": "string"
                                                },
                                                "tokenUrl": {
                                                    "type": "string"
                                                }
                                            },
                                            "required": [
                                                "scheme",
                                                "scopes"
                                            ],
                                            "type": "object"
                                        }
                                    ]
                                },
                                "type": "array"
                            },
                            "id": {
                                "type": "string"
                            },
                            "type": {
                                "enum": [
                                    "oauth"
                                ],
                                "type": "string"
                            }
                        },
                        "required": [
                            "flows",
                            "id",
                            "type"
                        ],
                        "type": "object"
                    },
                    {
                        "$id": "ApiKeySecurityScheme",
                        "additionalProperties": false,
                        "description": "Security scheme for api key authorization.",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "in": {
                                "$ref": "ApiKeyPlacement"
                            },
                            "name": {
                                "type": "string"
                            },
                            "type": {
                                "enum": [
                                    "apiKey"
                                ],
                                "type": "string"
                            }
                        },
                        "required": [
                            "id",
                            "in",
                            "type"
                        ],
                        "type": "object"
                    },
                    {
                        "$id": "BasicAuthSecurityScheme",
                        "additionalProperties": false,
                        "description": "Security scheme for basic authorization.",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "scheme": {
                                "enum": [
                                    "basic"
                                ],
                                "type": "string"
                            },
                            "type": {
                                "enum": [
                                    "http"
                                ],
                                "type": "string"
                            }
                        },
                        "required": [
                            "id",
                            "scheme",
                            "type"
                        ],
                        "type": "object"
                    },
                    {
                        "$id": "BearerTokenSecurityScheme",
                        "additionalProperties": false,
                        "description": "Security scheme for bearer authorization.",
                        "properties": {
                            "bearerFormat": {
                                "type": "string"
                            },
                            "id": {
                                "type": "string"
                            },
                            "scheme": {
                                "enum": [
                                    "bearer"
                                ],
                                "type": "string"
                            },
                            "type": {
                                "enum": [
                                    "http"
                                ],
                                "type": "string"
                            }
                        },
                        "required": [
                            "id",
                            "scheme",
                            "type"
                        ],
                        "type": "object"
                    },
                    {
                        "$id": "DigestSecurityScheme",
                        "additionalProperties": false,
                        "description": "Security scheme for digest authorization.",
                        "properties": {
                            "authorizationHeader": {
                                "description": "Name of header containing authorization eg. Authorization",
                                "type": "string"
                            },
                            "challengeHeader": {
                                "description": "Name of header containing challenge from the server eg. www-authenticate",
                                "type": "string"
                            },
                            "id": {
                                "type": "string"
                            },
                            "scheme": {
                                "enum": [
                                    "digest"
                                ],
                                "type": "string"
                            },
                            "statusCode": {
                                "description": "Code that should be returned from initial call for challenge eg. 401",
                                "type": "number"
                            },
                            "type": {
                                "enum": [
                                    "http"
                                ],
                                "type": "string"
                            }
                        },
                        "required": [
                            "id",
                            "scheme",
                            "type"
                        ],
                        "type": "object"
                    }
                ],
                "description": "Type describing general security scheme."
            },
            "type": "array"
        },
        "services": {
            "items": {
                "additionalProperties": false,
                "properties": {
                    "baseUrl": {
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    }
                },
                "required": [
                    "baseUrl",
                    "id"
                ],
                "type": "object"
            },
            "type": "array"
        }
    },
    "required": [
        "defaultService",
        "name",
        "services"
    ],
    "type": "object"
}

