{
    "$id": "ProviderJson",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "ApiKeyPlacement": {
            "$id": "ApiKeyPlacement",
            "description": "The placement of the API key.",
            "enum": [
                "body",
                "header",
                "path",
                "query"
            ],
            "type": "string"
        }
    },
    "description": "Type decribing provider.json document.",
    "properties": {
        "defaultService": {
            "type": "string"
        },
        "name": {
            "pattern": "^[a-z][_\\-a-z]*$",
            "type": "string"
        },
        "parameters": {
            "items": {
                "additionalProperties": false,
                "description": "Parameter needed for use of provider.",
                "properties": {
                    "default": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "name": {
                        "pattern": "^[_a-zA-Z][_a-zA-Z0-9]*$",
                        "type": "string"
                    }
                },
                "required": [
                    "name"
                ],
                "type": "object"
            },
            "type": "array"
        },
        "securitySchemes": {
            "items": {
                "anyOf": [
                    {
                        "$id": "ApiKeySecurityScheme",
                        "additionalProperties": false,
                        "description": "Security scheme for api key authorization.",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "in": {
                                "$ref": "ApiKeyPlacement"
                            },
                            "name": {
                                "type": "string"
                            },
                            "type": {
                                "enum": [
                                    "apiKey"
                                ],
                                "type": "string"
                            }
                        },
                        "required": [
                            "id",
                            "in",
                            "type"
                        ],
                        "type": "object"
                    },
                    {
                        "$id": "BasicAuthSecurityScheme",
                        "additionalProperties": false,
                        "description": "Security scheme for basic authorization.",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "scheme": {
                                "enum": [
                                    "basic"
                                ],
                                "type": "string"
                            },
                            "type": {
                                "enum": [
                                    "http"
                                ],
                                "type": "string"
                            }
                        },
                        "required": [
                            "id",
                            "scheme",
                            "type"
                        ],
                        "type": "object"
                    },
                    {
                        "$id": "BearerTokenSecurityScheme",
                        "additionalProperties": false,
                        "description": "Security scheme for bearer authorization.",
                        "properties": {
                            "bearerFormat": {
                                "type": "string"
                            },
                            "id": {
                                "type": "string"
                            },
                            "scheme": {
                                "enum": [
                                    "bearer"
                                ],
                                "type": "string"
                            },
                            "type": {
                                "enum": [
                                    "http"
                                ],
                                "type": "string"
                            }
                        },
                        "required": [
                            "id",
                            "scheme",
                            "type"
                        ],
                        "type": "object"
                    },
                    {
                        "$id": "DigestSecurityScheme",
                        "additionalProperties": false,
                        "description": "Security scheme for digest authorization.",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "scheme": {
                                "enum": [
                                    "digest"
                                ],
                                "type": "string"
                            },
                            "type": {
                                "enum": [
                                    "http"
                                ],
                                "type": "string"
                            }
                        },
                        "required": [
                            "id",
                            "scheme",
                            "type"
                        ],
                        "type": "object"
                    }
                ],
                "description": "Type describing general security scheme."
            },
            "type": "array"
        },
        "services": {
            "items": {
                "additionalProperties": false,
                "properties": {
                    "baseUrl": {
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    }
                },
                "required": [
                    "baseUrl",
                    "id"
                ],
                "type": "object"
            },
            "type": "array"
        }
    },
    "required": [
        "defaultService",
        "name",
        "services"
    ],
    "type": "object"
}

